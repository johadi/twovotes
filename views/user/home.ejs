<%- layout("template1")%>
<div class="row">
    <h2><%=user.name.fname%> <%=user.name.lname%></h2>
    <div class="col-xs-12 col-sm-12">
        <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3">
            <div class="col-xs-5 col-sm-4" >
                <img src="/uploads/default.jpg" class="img-responsive">
            </div>
            <div class="col-xs-7 col-sm-8">
                <p style="margin:0px;font-size:12px"><%=user.username%></p>
                <p style="margin:0px;font-size:12px"><a href="/user/profile">View Profile </a> | <a href="/logout">Logout</a></p>
                <p style="margin:0px;font-size:12px"><a href="/user/update-profile">Edit Profile</a></p>
            </div>
        </div>

        <div class="col-xs-10 col-sm-10 col-md-9 col-lg-9">
            <form role="form" name="mailform" class="form-horizontal" action="#" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <div class="col-xs-7">
                        <input type="text" required class="form-control" id="inputEmail" name="searchmail" placeholder="Enter Description to Search">
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">

                        <button type="submit" name="submitsearch" class="btn btn-success">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row container-hd">
    <div  class="col-lg-3 leftnavy">
            <div class="nav-head"><h4>Quick Access</h4></div>
            <div class="list-group show" style="margin-bottom:50px;line-height:5px; display: list-item">
                <a href="/user/post" class="list-group-item">New Post</a>
                <a href="#" class="list-group-item">My Posts</a>
                <a href="#" class="list-group-item">Saved posts</a>
            </div>

    </div>
    <div class="col-lg-6">
        <% for(var i=0;i<posts.length;i++){ %>
        <div class="row" id="pos">
            <%
                var date=new Date(posts[i].date);
                var like11="Like";
                var like22="Like";

                //this is to get the like status of this user for the current post
                for(var j=0 ;j< posts[i].reactions.length;j++){
                    if(user._id.equals(posts[i].reactions[j].voter)){

                        like11=posts[i].reactions[j].like1Status;
                        like22=posts[i].reactions[j].like2Status;
                        break;
                    }
                }
            %>
            <div class="media col-lg-12" style="border-bottom: solid lightgrey 2px; margin-top: 5px; padding-bottom: 15px">
                <a class="pull-left" href="#">
                    <img class="media-object img-circle" style="height: 50px; width:50px;" src="/default2.jpg" alt="...">
                </a>
                <div class="media-body">
                    <h4 class="media-heading"><b><%=posts[i].poster.name.fname%> <%=posts[i].poster.name.lname%></b><small>
                            @<%=posts[i].poster.username %></small></h4>
                    <span  style="color: dimgrey"><%= date.toDateString()%> at <%= date.toLocaleTimeString()%></span>
                </div>
            </div>
            <div class="col-lg-12">
                <h4 align="center"><%= posts[i].title %></h4>
                <div class="col-lg-6" style="padding: 0 0 0 0">
                    <img src="/<%=posts[i].poster.username %>/picture1/<%= posts[i].picture.pic1.location %>" class="img-responsive" />
                </div>
                <div class="col-lg-6" style="padding: 0 0 0 0">
                    <img src="/<%=posts[i].poster.username %>/picture2/<%= posts[i].picture.pic2.location %>" class="img-responsive" />
                </div>
            </div>
            <div class="col-lg-12" style="border-top: solid lightgrey 2px; margin-top: 10px; padding-top: 10px; padding-bottom: 10px;">
                <div class="col-lg-6" style="padding: 0 0 0 0">
                    <span id="<%=posts[i]._id%>vote1" >Votes : <%=posts[i].picture.pic1.votes %></span>
                </div>
                <div class="col-lg-6" style="padding: 0 0 0 0">
                    <span id="<%=posts[i]._id%>vote2">Votes : <%=posts[i].picture.pic2.votes %></span>
                </div>

            </div>
            <div class="col-lg-12" style="border-top: solid lightgrey 2px; margin-top: 1px; padding-top: 10px;">
                    <div class="col-lg-6" style="padding: 0 0 0 0">
                        <a href="" id="<%=posts[i]._id%>like1" class="like1" rel="<%=posts[i]._id%>"><%=like11%></a>
                    </div>
                    <div class="col-lg-6" style="padding: 0 0 0 0">
                        <a href="" id="<%=posts[i]._id%>like2" class="like2" rel="<%=posts[i]._id%>"><%=like22%></a>
                    </div>

            </div>

        </div>

        <input type="hidden" id="<%=posts[i]._id%>posterId" value="<%=posts[i].poster._id %>" />
        <input type="hidden" id="<%=posts[i]._id%>postId" value="<%=posts[i]._id%>" />
        <input type="hidden" id="<%=posts[i]._id%>userId" value="<%=user._id%>" />
        <%}%>
    </div>

    <div class="col-lg-3">

    </div>
</div>