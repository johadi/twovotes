<%- layout("template1")%>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron" style="background-color: #737373">
    <div class="container">
        <h1 style="color: #ffffff">Welcome to LunarStar</h1>
        <p style="color: #ffffff">LunarStar is a site where Students' records are managed on a FLY.</p>
        <p><a class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-lg-4">
            <img src="/hadi.jpg" class="img-responsive" alt="can't display photo"/>
        </div>
        <div class="col-lg-3">
            <h4>LET PEOPLE KNOW YOU</h4>
            <p>let people know so much about you by supplying necessary information that can attract employers or let the people know
                how skillful and experience you are for future reference.
            </p>
            <p><a class="btn btn-primary" href="#">View More &raquo;</a></p>
        </div>
        <div class="col-lg-5" style="padding-right: 70px;">
            <div class="col-lg-12" style="border:#737373 groove 5px;padding-left: 50px; padding-top: 30px">

                <% if(message.length>0) {%>
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times</span>
                    </button>
                    <%=message%>
                </div>
                <%}%>


                <form class="form-horizontal" action="/upload" role="form" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="file" id="exampleInputFile" name="display">
                    </div>


                    <div class="form-group">
                        <div class=" col-lg-12">
                            <button type="submit" class="btn btn-success">Upload</button>


                        </div>

                    </div>
                </form></div>

        </div>
    </div>

    <hr>
</div> <!-- /container -->